{
  "manifest_version": 3,
  "name": "Paper Attention",
  "version": "0.1.0",
  "description": "Show your current arXiv page in Discord Rich Presence (unofficial).",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://arxiv.org/*"],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["https://arxiv.org/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
